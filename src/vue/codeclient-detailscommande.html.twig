      </div>
    {% else %}
      {# <br>
      <br>
      <h3> Entrez ici un code client : </h3>
      <br>
      <div style="padding-left:15%; padding-right:15%;">
      <input type="text" class="form-control" id="codeclient" name="numClient" placeholder="Code client">
      <button type="submit" name="btValider" class="btn btn-lg btn-primary btn-block">Rechercher</button>
      <form class="form-inline my-2 my-lg-0" action="index.php?page=codeclient-detailscommande" method="post">
          <input class="form-control mr-sm-2" type="search" name="recherche" id="recherche" placeholder="Tapez votre recherche">
          <button onmouseover="this.style.opacity ='1'" onmouseout="this.style.opacity ='0.7'" style="border-width:1px; border-style:dotted; border-color:black;" class="btn btn-outline-primary my-2 my-sm-0" name="btRechercher" id="btRechercher" type="submit"> <FONT color="white"> Rechercher </FONT></button>

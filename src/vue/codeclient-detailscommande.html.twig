{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Client {% endblock %}

{% block contenu %}

  <div style="text-align:center" class="animate__animated animate__fadeInDown animate__delay-1s">
    <h2> Liste des commandes d'un client </h2>
    <br><br>
    <h1 class="h3 mb-3 font-weight-normal">Voici le(s) résultat(s) correspondant(s) au client : "{{form.recherche}}"</h1>
